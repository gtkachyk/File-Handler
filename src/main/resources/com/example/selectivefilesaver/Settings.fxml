<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.selectivefilesaver.SettingsController">
   <children>
      <Label layoutX="85.0" layoutY="72.0" text="Font Settings" />
      <Label layoutX="27.0" layoutY="112.0" text="Font size" />
      <TextField fx:id="fontSizeTextField" layoutX="81.0" layoutY="108.0" prefHeight="18.0" prefWidth="70.0" />
      <Button fx:id="fontSizeButton" layoutX="180.0" layoutY="108.0" mnemonicParsing="false" onMouseClicked="#setFontSizeButton" text="Apply" />
      <Label layoutX="394.0" layoutY="72.0" text="Theme Settings" />
      <Label layoutX="286.0" layoutY="112.0" text="Current theme" />
      <ComboBox fx:id="themeSelectorComboBox" layoutX="378.0" layoutY="107.0" onHidden="#setCurrentTheme" onMouseClicked="#selectThemePopulate" prefHeight="26.0" prefWidth="113.0" />
   </children>
</AnchorPane>
